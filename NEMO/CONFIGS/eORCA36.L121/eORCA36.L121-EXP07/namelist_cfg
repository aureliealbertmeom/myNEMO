   ln_qsr_rgb  = .true.    !  RGB (Red-Green-Blue) light penetration
   !                       !  RGB & 2BD choices:
   nn_chldta   =      1    !  RGB : 2D Chl data (=1), 3D Chl data (=2) or cst value (=0)

   cn_dir      = './'      !  root directory for the chlorophyl data location
   !___________!_________________________!___________________!___________!_____________!________!___________!__________________!__________!_______________!
   !           !  file name              ! frequency (hours) ! variable  ! time interp.!  clim  ! 'yearly'/ ! weights filename ! rotation ! land/sea mask !
   !           !                         !  (if <0  months)  !   name    !   (logical) !  (T/F) ! 'monthly' !                  ! pairing  !    filename   !
   sn_chl      ='chlorophyl_v0.0'     ,        -1         , 'CHLA'    ,   .true.    , .true. , 'yearly'  , 'weights_bilinear_chla-eORCA36_4.2.nc'               , ''       , ''
/
!-----------------------------------------------------------------------
&namsbc_ssr    !   surface boundary condition : sea surface restoring   (ln_ssr =T)
!-----------------------------------------------------------------------
   nn_sssr     =     2     !  add a damping     term in the surface freshwater flux (=2)
      !                    !  or to SSS only (=1) or no damping term (=0)
      rn_deds     =  -166.67  !  magnitude of the damping on salinity   [mm/day]
      ln_sssr_bnd =  .true.   !  flag to bound erp term (associated with nn_sssr=2)
      rn_sssr_bnd =   4.e0    !  ABS(Max/Min) value of the damping erp term [mm/day]
   sn_sss      = 'sosaline_eORCA025L121-eORCA36L121_y1989m01_v6d_4.2.nc'              ,        -1.        ,  'vosaline'    ,    .false.   , .true. , 'yearly'  ,    ''            ,    ''    ,     ''
/
!-----------------------------------------------------------------------
&namsbc_rnf    !   runoffs                                              (ln_rnf =T)
!-----------------------------------------------------------------------

   cn_dir      = './'      !  root directory for the runoff data location
   !___________!_________________________!___________________!___________!_____________!________!___________!__________________!__________!_______________!
   !           !  file name              ! frequency (hours) ! variable  ! time interp.!  clim  ! 'yearly'/ ! weights filename ! rotation ! land/sea mask !
   !           !                         !  (if <0  months)  !   name    !   (logical) !  (T/F) ! 'monthly' !                  ! pairing  !    filename   !
   sn_rnf      = 'eORCA36.L121_runoffs_ISBA_clim1979-2018_4.2.nc' , 24     , 'sorunoff'  ,   .true.    , .true., 'yearly'  , ''               , ''       , ''
   sn_cnf      = 'eORCA36.L121_runoffs_ISBA_clim1979-2018_4.2.nc' , 24     , 'socoefr'  ,   .true.    , .true., 'yearly'  , ''               , ''       , ''
/
