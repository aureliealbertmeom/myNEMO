   sn_tem = 'votemper_eORCA025L121-eORCA36L121_y1989m01_v6d_4.2.nc',       -12       , 'votemper',   .false.   , .true. , 'yearly'  ,    ''            ,    ''    ,    ''
   sn_sal = 'vosaline_eORCA025L121-eORCA36L121_y1989m01_v6d_4.2.nc',       -12       , 'vosaline',   .false.   , .true. , 'yearly'  ,    ''            ,    ''    ,    ''
